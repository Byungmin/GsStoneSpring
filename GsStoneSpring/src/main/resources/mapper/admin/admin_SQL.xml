<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="admin">

	<select id="openIntro" resultType="hashmap">
    <![CDATA[
        SELECT
            *
        FROM
            intro
        ORDER BY num DESC
    ]]>
	</select>

	<select id="openCustomer" resultType="hashmap">
    <![CDATA[
        SELECT
            *
        FROM
            qna_board
        WHERE del_gb = 'N'
        ORDER BY idx DESC
    ]]>
	</select>

	<select id="detailCustomerQna" parameterType="string"
		resultType="hashmap">
    <![CDATA[
        SELECT
            *
        FROM
            qna_board
       	WHERE
       		IDX = #{IDX}
    ]]>
	</select>

	<select id="fileCustomerQna" parameterType="string" resultType="hashmap">
    <![CDATA[
       SELECT
            IDX,
            ORIGINAL_FILE_NAME,
            ROUND(FILE_SIZE/1024,1) AS FILE_SIZE
        FROM
            qna_FILE
        WHERE
            BOARD_IDX = #{IDX}
            AND DEL_GB = 'N'

    ]]>
	</select>

	<delete id="deleteQna" parameterType="hashmap">
	<![CDATA[
		UPDATE 
			qna_board
		SET
			del_gb = 'Y'
		WHERE
			idx=#{IDX}
	]]>
	</delete>

</mapper>


